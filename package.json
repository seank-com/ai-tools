{
  "name": "ai-tools",
  "publisher": "seank",
  "displayName": "ai-tools",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onStartupFinished"],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-tools.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "ai-tools.refreshMcpServers",
        "title": "AI Tools: Refresh MCP Servers"
      }
    ],
    "mcpServerDefinitionProviders": [
      {
        "id": "ai-tools.provider",
        "label": "AI Tools MCP Provider"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "zod": "^3.25.76"
  }
}
